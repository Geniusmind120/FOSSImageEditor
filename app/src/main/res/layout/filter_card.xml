<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    android:layout_width="76dp"
    android:layout_height="76dp"
    android:id="@+id/filter_cardView"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardUseCompatPadding="true"
    app:elevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/filter_preview"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/filter_saturation" />

    <TextView
        android:id="@+id/filter_title"
        android:text="@string/filter_saturation"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/color_light"
        android:background="@color/color_shadow"/>

    <TextView
        android:id="@+id/filter_title2"
        android:text="@string/filter_saturation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center|bottom"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/color_light"
        android:background="@color/color_shadow"/>

</android.support.v7.widget.CardView>


